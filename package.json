{
  "name": "heartbeat-as-a-service",
  "short_name": "Heartbeat API",
  "description": "An API for collecting system heartbeats.",
  "color": "#ef7b6c",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:worker": "remix-pwa build",
    "dev": "run-p dev:*",
    "dev:remix": "remix dev --manual -c \"npm run start\"",
    "dev:worker": "remix-pwa dev",
    "start": "wrangler pages dev --compatibility-date=2023-06-21 ./public",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.6.0",
    "@remix-pwa/cache": "^2.0.12",
    "@remix-pwa/strategy": "^2.1.9",
    "@remix-pwa/sw": "^2.1.12",
    "@remix-run/cloudflare": "^2.2.0",
    "@remix-run/cloudflare-pages": "^2.2.0",
    "@remix-run/css-bundle": "^2.2.0",
    "@remix-run/react": "^2.2.0",
    "dotenv": "^16.3.1",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-pwa": "^3.0.19",
    "sanitize.css": "^13.0.0",
    "uid": "^2.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "@remix-pwa/dev": "2.0.31",
    "@remix-pwa/worker-runtime": "^2.0.8",
    "@remix-run/dev": "^2.2.0",
    "@remix-run/eslint-config": "^2.2.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "glob": "^10.3.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "remix-pwa": "^3.0.19",
    "typescript": "^5.2.0",
    "wrangler": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
